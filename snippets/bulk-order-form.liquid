<style>
      .bulk-order-form {
        width: 500px;
        margin: 0 auto;
        background: white;
        padding: 20px 20px 20px;
        -webkit-box-shadow: 0 7px 27px rgb(0 0 0 / 28%);
      -moz-box-shadow: 0 7px 27px rgba(0,0,0,0.28);
      box-shadow: 0 7px 27px rgb(0 0 0 / 28%);
    }
          .bulk-order-form form {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin: 0;
        }

        .bulk-order-form form#contact_form>div {
            flex: 0 0 calc(100%/2 - 20px/2);
            max-width: calc(100%/2 - 20px/2);
        }

        .bulk-order-form form input#phone {
            width: 100%;
        }
        .bulk-order-form .message {
          flex: 0 0 100%!important;
          max-width: 100%!important;
      }
    .bulk-order-form form input {
      background: white;
  }
      .bulk-order-form form textarea {
      background: white;
  }

  @media(max-width:768px){
    .bulk-order-form{
      width:auto!important;
      margin-inline: 16px;
    }
  }
</style>
<div class="bulk-order-form">
  {% form 'contact' %}
    {{ form.errors | default_errors }}

    <div class="first-name">
      <label required for="first-name">First name</label>
      <input required placeholder="eg. Rahul" type="text" name="contact[first_name]" id="first-name">
    </div>

    <div class="last-name">
      <label required for="last-name">Last name</label>
      <input required placeholder="eg. Kumar" type="text" name="contact[last_name]" id="last-name">
    </div>

    <div class="phone">
      <label required for="phone">Phone</label>
      <input required placeholder="99xxxxxx12" type="tel" name="contact[phone]" id="phone">
    </div>

    <div class="email">
      <label for="email">Email</label>
      <input placeholder="yourname@mail.com" type="email" name="contact[email]" id="email">
    </div>

    <!--
      <div class="order-number">
        <label for="order-number">Order number</label>
        <input type="text" name="contact[order_number]" id="order-number">
      </div>
    -->
    <div class="pincode">
      <label required for="pincode">Pincode</label>
      <input required placeholder="11xxx1" type="number" name="pincode" id="pincode">
    </div>

    <div class="city">
      <label required for="city">City</label>
      <input required placeholder="eg. Bangalore" type="text" name="city" id="city">
    </div>

    <div class="message">
      <label for="message">Message</label>
      <textarea placeholder="Enter your message" name="contact[body]" id="message"></textarea>
    </div>

    <div class="submit">
      <input class="btn1" type="submit" value="Book Now">
    </div>
  {% endform %}
</div>
