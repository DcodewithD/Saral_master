<style>
  .ship-info-section-wrap h5, .ship-info-section-wrap h3, .ship-info-section-wrap h2{
    margin-bottom: 0;
  }
  .ship-info-section-wrap h2{
    font-family: var(--heading-font);
  }
      #content-mid-section{
      display: flex;
      gap: 3%;
      justify-content: flex-start;
      align-items:center;
      margin-top: 15px;
      margin-bottom: 17px;
    }
    .ship-info-content-image{
        flex: 0 0 22%;
    }
    .ship-info-content-heading{
        flex: 0 0 20%;
    }


  @media(max-width:768px){
    .ship-info-content p{
      font-size: 14px;
      font-family: var(--sub-heading-font);
      color: #2c2c2c !important;
    }
    #content-mid-section h5{
      font-size: 18px;
      font-family: var(--heading-font);
    }
    .ship-info-content-image .image-wrap{
      padding-bottom:100%;
    }

    .ship-info-header{
      margin-top: 25px;
      margin-bottom: 14px;
    }
    .ship-info-header h3{
      margin-bottom: 5px;
    }
    .ship-info-main-section-wrap{


   }
    .ship-info-section-wrap{
      padding: 20px;
       background: #F2EFE4;
    }


  }

  @media(min-width:768px){

   .ship-info-main-section-wrap{

   }

    .ship-info-section-image{
      display: none;
    }
    .ship-info-section-wrap{
       background: url({{section.settings.image | image_url}});
      background-size: cover;

    }
    .ship-info-header h3{
         font-size: 27px !important;
         font-family: var(--content-font) !important;
    }
    .ship-info-header h2{
         font-size: 36px !important;
         font-family: var(--button-font) !important;
    }
    .ship-info-header *{
      line-height: 118%;
    }
    .ship-info-content *{
         line-height: 135%;
    }
    .ship-info-content p{
         font-size: 18px !important;
          font-family: var(--content-font);
      color: #2c2c2c !important;
    }
    .ship-info-content-heading h5{
      font-size: 18px;
      font-family: var(--heading-font);
    }
    .ship-info-content-image{

        flex: 0 0 35%;
      max-width: 35%;
    }
    .ship-info-content-image .image-wrap{
        padding-bottom: 93%;
        flex: 0 0 9%;
    }
    .ship-info-section-desk{
      padding-top: 68px;
      padding-left:55px;
      background:#F2EFE4;
      margin-left: 120px;
      width: 36%;
      padding-bottom: 15%;
    }
    .ship-info-header{
      margin-bottom: 50px;
    }
    .ship-info-content{
      width: 78%;
    }
    #content-mid-section{
       margin-top: 25%;
       margin-bottom: -35%;
      gap:13%;
    }
    .ship-info-content-heading{
      flex: 0 0 50%;
      max-width: 50%;
    }
    #content-paragraph-2{
      width: 88%;
    }

  }
</style>

<div class="ship-info-main-section-wrap section-width {% unless section.settings.section_width == 'full-width' %}{% endunless %}">
  <div class="section-content section-wrap ship-info-section-wrap">
    <div class="ship-info-section-image">
      {% assign image = section.settings.image %}
      {% if image != blank %}
        <div
          class="image-wrap"
          style="position:relative; padding-bottom: {{ 100 | divided_by : image.aspect_ratio }}%"
        >
          <img
            style="position:absolute;top:0px;left:0px;"
            srcset="
              {%- if image.width >= 375 -%}{{ image | image_url: width: 375 }} 350w,{%- endif -%}
              {%- if image.width >= 750 -%}{{ image | image_url: width: 375 }} 450w,{%- endif -%}
              {%- if image.width >= 1100 -%}{{ image | image_url: width: 400 }} 470w,{%- endif -%}
              {%- if image.width >= 1500 -%}{{ image | image_url: width: 425 }} 490w,{%- endif -%}
              {%- if image.width >= 1780 -%}{{ image | image_url: width: 450 }} 500w,{%- endif -%}
              {%- if image.width >= 2000 -%}{{ image | image_url: width: 500 }} 500w,{%- endif -%}
              {%- if image.width >= 3000 -%}{{ image | image_url: width: 500 }} 500w,{%- endif -%}
              {%- if image.width >= 3840 -%}{{ image | image_url: width: 500 }} 500w,{%- endif -%}
            "
            src="{{ image | image_url: width: 400 }}"
            sizes=" (min-width: 768px) calc({% if count > 1 %}(100vw) / 2){% else %} (100vw){% endif %}, (max-width: 768px) calc((100vw ))"
            loading="lazy"
            alt="{{ image.alt | escape }}"
            width="{{ image.width }}"
            height="auto"
          >
        </div>
      {% endif %}
    </div>

    <div class="ship-info-section-desk">
      <div class="ship-info-header">
        <h3>{{ section.settings.heading }}</h3>
        <h2>{{ section.settings['sub-heading'] }}</h2>
      </div>
      <div class="ship-info-content">
        <p id="content-paragraph-1">{{ section.settings['content-1'] }}</p>
        <div id="content-mid-section">
          <div class="ship-info-content-image">
            {% assign image = section.settings['in-content-image'] %}
            {% if image != blank %}
              <div
                class="image-wrap"
                style="position:relative;"
              >
                <img
                  style="position:absolute;top:0px;left:0px;"
                  srcset="
                    {%- if image.width >= 375 -%}{{ image | image_url: width: 375 }} 350w,{%- endif -%}
                    {%- if image.width >= 750 -%}{{ image | image_url: width: 375 }} 450w,{%- endif -%}
                    {%- if image.width >= 1100 -%}{{ image | image_url: width: 400 }} 470w,{%- endif -%}
                    {%- if image.width >= 1500 -%}{{ image | image_url: width: 425 }} 490w,{%- endif -%}
                    {%- if image.width >= 1780 -%}{{ image | image_url: width: 450 }} 500w,{%- endif -%}
                    {%- if image.width >= 2000 -%}{{ image | image_url: width: 500 }} 500w,{%- endif -%}
                    {%- if image.width >= 3000 -%}{{ image | image_url: width: 500 }} 500w,{%- endif -%}
                    {%- if image.width >= 3840 -%}{{ image | image_url: width: 500 }} 500w,{%- endif -%}
                  "
                  src="{{ image | image_url: width: 400 }}"
                  sizes=" (min-width: 768px) calc({% if count > 1 %}(100vw) / 2){% else %} (100vw){% endif %}, (max-width: 768px) calc((100vw ))"
                  loading="lazy"
                  alt="{{ image.alt | escape }}"
                  width="{{ image.width }}"
                  height="auto"
                >
              </div>
            {% endif %}
          </div>
          <div class="ship-info-content-heading">
            <h5 class="">{{ section.settings['in-content-heading'] }}</h5>
          </div>
        </div>
        <div class="content-para-2">
          <p id="content-paragraph-2">{{ section.settings['content-2'] }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "ship-info-section",
  "tag": "section",
  "class": "ship-info-section",
  "settings": [
             	{
             	"type": "image_picker",
             	"id": "image",
             	"label": "Image"
             	},
                {
             	"type": "text",
             	"id": "heading",
             	"label": "Heading"
             	},
                {
             	"type": "text",
             	"id": "sub-heading",
             	"label": "Sub Heading"
             	},
                {
             	"type": "text",
             	"id": "content-1",
             	"label": "Content Paragraph-1"
             	},
                {
             	"type": "image_picker",
             	"id": "in-content-image",
             	"label": "Content Image"
             	},
                {
             	"type": "text",
             	"id": "in-content-heading",
             	"label": "In Content Heading"
                },
                {
             	"type": "text",
             	"id": "content-2",
             	"label": "Content Paragraph-2"
                }
           ],
    "presets": [
    {
      "name": "ship-info-section"
    }
  ]
}
{% endschema %}
